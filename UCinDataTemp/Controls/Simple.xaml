<UserControl
    x:Class="UCinDataTemp.Controls.Simple"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UCinDataTemp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel
        Orientation="Horizontal"
        BorderBrush="Gold"
        BorderThickness="1"
        CornerRadius="12">
        <TextBlock
            x:Name="leadertext"
            Text="{x:Bind Leader,Mode=OneWay}"
            Margin="4"
            VerticalAlignment="Center" />
        <Button
            x:Name="tbutton"
            Content="+"
            Background="Transparent"
            Click="tbutton_Click"
            Margin="4"
            VerticalAlignment="Center" />
        <TextBlock
            x:Name="follower"
            VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
